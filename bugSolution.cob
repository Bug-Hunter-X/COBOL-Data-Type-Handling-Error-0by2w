MOVE SPACES TO WS-CUSTOMER-NAME.

IF CUSTOMER-RECORD-FOUND = 'Y' THEN
    EVALUATE TRUE
        WHEN LENGTH OF CUSTOMER-NAME > 30 THEN
            DISPLAY "Customer name exceeds maximum length."
            MOVE CUSTOMER-NAME(1:30) TO WS-CUSTOMER-NAME
        WHEN CUSTOMER-NAME CONTAINS ANY NON-ALPHANUMERIC CHARACTER THEN
            DISPLAY "Invalid characters in customer name."
            MOVE SPACES TO WS-CUSTOMER-NAME 
        WHEN OTHER THEN
            MOVE CUSTOMER-NAME TO WS-CUSTOMER-NAME
    END-EVALUATE
ELSE
    DISPLAY "Customer record not found."
END-IF.

MOVE WS-CUSTOMER-NAME TO OUTPUT-CUSTOMER-NAME.